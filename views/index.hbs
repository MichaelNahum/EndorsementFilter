    endorse_template = $('.endorsement').clone();
    $('.endorsement').remove();
    messages = {{{messages}}}
    function createEndorsement(email) {
      let endorse = endorse_template.clone();
      endorse.find('.timestamp').text(new Date(+email.internalDate));
      endorse.find('.headline').text(email.snippet);
      return endorse;
    }
    function populateMessages(emails) {
      return emails.map(e => createEndorsement(e));
    }
